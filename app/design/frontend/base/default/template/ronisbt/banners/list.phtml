<?php  if($this->getBanners()->getFirstItem()->getBannerId()): ?>
    <div class="flexslider">
        <ul class="slides">
            <?php foreach($this->getBanners() as $banner):?>
                <li>
                    <a href="<?php echo $banner->getUrl()?>">
                        <p class="flex-caption">
                            <?php echo Mage::helper('core')->escapeHtml($banner->getTitle()) ?>    
                        </p>
